/* app.wxss */
page {
  background-color: #f6f6f6;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', SimSun, sans-serif;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 通用样式 */
.btn-primary {
  background-color: #07c160;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

.btn-primary:active {
  background-color: #06a952;
}

.card {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.input-group {
  margin: 30rpx 0;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.input-field {
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background: white;
}

.input-field:focus {
  border-color: #07c160;
}

/* 响应样式 */
.response-box {
  background: #f8f9fa;
  border-left: 6rpx solid #07c160;
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 4rpx;
}

.loading {
  text-align: center;
  color: #666;
  padding: 40rpx;
}

.error {
  background: #fee;
  border-left: 6rpx solid #f56c6c;
  padding: 20rpx;
  margin: 20rpx 0;
  border-radius: 4rpx;
  color: #f56c6c;
}