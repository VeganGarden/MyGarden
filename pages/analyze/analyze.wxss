/* pages/analyze/analyze.wxss */
.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: white;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn .icon {
  font-size: 32rpx;
  color: #333;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.status-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.status-dot.online {
  background: #07c160;
}

.status-dot.offline {
  background: #f56c6c;
}

.card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title .icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.card-title .text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.upload-area {
  border: 2rpx dashed #e0e0e0;
  border-radius: 12rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  background: #f8f9fa;
  margin-bottom: 20rpx;
}

.upload-area:active {
  background: #f0f0f0;
}

.upload-icon {
  font-size: 60rpx;
  margin-bottom: 20rpx;
}

.upload-text {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
}

.file-info {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.file-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.file-size {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.btn-remove {
  background: #f56c6c;
  color: white;
  border: none;
  border-radius: 6rpx;
  padding: 15rpx 30rpx;
  font-size: 24rpx;
}

.option-group {
  margin-bottom: 30rpx;
}

.option-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: bold;
}

.picker {
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  background: white;
}

.picker-value {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.analyze-btn {
  background: linear-gradient(135deg, #07c160, #06a952);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin: 40rpx 0;
}

.analyze-btn:disabled {
  background: #ccc;
  color: #999;
}

.result-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.result-section {
  margin-bottom: 40rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: rgba(255, 255, 255, 0.9);
}

.stats-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.stat-item {
  text-align: center;
  flex: 1;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.insight-item, .recommendation-item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 15rpx;
}

.insight-text, .recommendation-text {
  font-size: 28rpx;
  line-height: 1.6;
}

.error-card {
  background: #fee;
  border: 2rpx solid #f56c6c;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
  margin-top: 30rpx;
}

.error-icon {
  font-size: 40rpx;
  margin-bottom: 15rpx;
  display: block;
}

.error-text {
  font-size: 28rpx;
  color: #f56c6c;
}