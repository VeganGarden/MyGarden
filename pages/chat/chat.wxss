/* pages/chat/chat.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.chat-header {
  background: white;
  padding: 30rpx;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn .icon {
  font-size: 32rpx;
  color: #333;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.status-dot {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
}

.status-dot.online {
  background: #07c160;
}

.status-dot.offline {
  background: #f56c6c;
}

.chat-messages {
  flex: 1;
  padding: 30rpx;
  background: #f5f5f5;
}

.message {
  display: flex;
  margin-bottom: 40rpx;
}

.message.user {
  flex-direction: row-reverse;
}

.message.user .content {
  background: #07c160;
  color: white;
  margin-left: 0;
  margin-right: 20rpx;
}

.message.user .time {
  color: rgba(255, 255, 255, 0.8);
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.avatar .icon {
  font-size: 40rpx;
}

.content {
  flex: 1;
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-left: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  max-width: 70%;
}

.text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  display: block;
}

.input-area {
  background: white;
  padding: 30rpx;
  border-top: 1rpx solid #e0e0e0;
}

.input-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.message-input {
  flex: 1;
  border: 2rpx solid #e0e0e0;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  background: #f8f9fa;
}

.message-input:focus {
  border-color: #07c160;
  background: white;
}

.send-btn {
  background: #07c160;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.send-btn:disabled {
  background: #ccc;
  color: #999;
}