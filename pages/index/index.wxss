/* pages/index/index.wxss */
.container {
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 40rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background: white;
  margin-bottom: 20rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-title .icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.card-title .text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #07c160, #06a952);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx 60rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.status-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.status-item:last-child {
  border-bottom: none;
}

.status-item .label {
  font-size: 28rpx;
  color: #666;
}

.status-item .value {
  font-size: 28rpx;
  font-weight: bold;
}

.value.online {
  color: #07c160;
}

.value.offline {
  color: #f56c6c;
}

.input-field {
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
  background: #f8f9fa;
}

.input-field:focus {
  border-color: #07c160;
  background: white;
}

.response-box {
  background: #f8f9fa;
  border-left: 6rpx solid #07c160;
  padding: 24rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}